{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Fisherman",
    "description": "Dependency description file describing fishes to be fetched and installed",
    "type": "object",
    "properties": {
        "fishes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "version": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "required": [
                    "name",
                    "version"
                ]
            }
        }
    },
    "required": [
        "fishes"
    ],
    "additionalProperties": false
}

